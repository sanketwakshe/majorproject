<% layout("/layouts/boilerplates.ejs")%> 
<style>
.filters{
  display: flex;

}
.filter{
  text-align: center;
  margin-right: 2rem;
  margin-top: 0.8em;
  opacity: 0.7;
}
.filter:hover{
  opacity: 1;
  cursor: pointer;
}
.filter p{
  font-size:0.8rem ;
}
.tax-info{

  display: none;
}
.tax-toggle{
  border: 1px solid black;
  border-radius: 1rem;
  height: 3rem;
  padding:0.7rem;
  margin-left: 2rem;
  display: flex;
  text-align: center;
 
}
</style> 
   <div class="filters">
    <div class="filter">
      <div><i class="fa-solid fa-fire"></i></div>
      <p> Trending</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-bed"></i></div>
      <p>Rooms</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-mountain-city"></i></div>
      <p>Iconic city</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-house-tsunami"></i></div>
      <p>Beach</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-mountain-sun"></i></div>
      <p>Mountain</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-person-swimming"></i></div>
      <p>Amazing Pools</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-tents"></i></div>
      <p>Camping</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-tractor"></i></div>
      <p>Farms</p>
    </div>
    <div class="filter">
      <div><i class="fa-brands fa-fort-awesome"></i></div>
      <p>Forts</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-person-snowboarding"></i></i></div>
      <p>Tracking</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-cloud-sun"></i></div>
      <p>Sun Set</p>
    </div>
    <div class="filter">
      <div><i class="fa-brands fa-pagelines"></i></div>
      <p>National Parks</p>
    </div>
    <div class="tax-toggle mt-3">
      <div class="form-check-reverse form-switch">
      <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
      <label class="form-check-label" for="flexSwitchCheckDefault">Default  Total After Taxes</label>
    </div>
  </div>
    

   </div>
    <div class="row row-cols-lg-4 row-cols-md-2 row-cols-sm-1 mt-3 hidden-mb">
     <% for(let listing of allListings){ %>
      <div class="col mb-4">
        <a href="/listings/<%= listing._id %>" class="listing-link" style="text-decoration: none; color: inherit;">
          <div class="card h-100 listing-cards" style="width: 20rem;">
            <img src="<%= listing.image.url%>" class="card-img-top" alt="listing_image" style="height: 20rem;">
            <div class="card-img-overlay"></div>
            <div class="card-body">
              <p class="card-text">
                <b><%= listing.title %><br></b>
                &#8377;<%= listing.price ?listing.price.toLocaleString("en-IN"):'N/A' %>
                <i class="tax-info"> &nbsp;+18% GST</i>
              </p>
            </div>
          </div>
        </a>
      </div>
     <% } %> 
    </div>
    <script>
      let taxSwitch = document.getElementById("flexSwitchCheckDefault");
      taxSwitch.addEventListener("click",()=>{
        let taxInfo = document.getElementsByClassName("tax-info");
        for(info of taxInfo){
          if(info.style.display !="inline"){
            info.style.display="inline"
          }else{
            info.style.display="none";
          }
        }
      })
    </script>
