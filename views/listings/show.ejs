<% layout("/layouts/boilerplates.ejs")%>   
<div class="row mt-3">
    <div class="col-8 offset-3">


    <h3><%= listing.title %></h3>
</div>
    <div class="cards col-6 offset-3 show-cards ">
        <div class="listing-card" style="width: 24rem;">
            <img src="<%=listing.image.url%>" class="card-img-top show img" alt="listing.image.url">
            <div class="card-body">
              
               <p class="card-text">Owned By  <i><%= listing.owner.username %></i></p> 
              
                 <p card="card-text"><b><%=listing.title%></b></p>
                 <p card="card-text"><%=  listing.description %><br></p>
                <p class="card-text">
                &#8377;<%= listing.price ? listing.price.toLocaleString("en-IN"):'N/A' %></p>
                <p class="card-text"> <%= listing.location %><br></p>
                <p class="card-text"> <%= listing.country%><br></p>
                    

            
            </div>
          </div>
    </div>
    <% if(currUser && listing.owner._id.equals(currUser._id)) {%>
      <div class="btms">
        <a   href="/listings/<%= listing._id %>/edit " class="btn btn-dark col-1 offset-3 edit-btn"> Edit </a>
    
        <br><br>
      <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE"> 
          <button class="btn btn-dark offset-5">Delete </button>
      </form>
    </div>
   
  <%}%>
  <div class="col-8 offset-3 mb-3">
    
    <% if (currUser ) { %>
      <h4> Leave a Review</h4>
      <form action="/listings/<%=listing.id%>/reviews" method="POST"novalidation class="needs-validation">
           

          
 
<div class="mb-3 mt-3"> 
  <label for="rating"class="form-label"> Rating</label>
<fieldset class="starability-slot">

  
  <input type="radio" 
  id="no-rate"
   class="input-no-rate" 
   name=" review[rating]" 
   value="1" 
   checked aria-label="No rating." 
   />

   <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked aria-label="No rating." />
   <input type="radio" id="first-rate1" name="review[rating]" value="1" />
   <label for="first-rate1" title="Terrible">1 star</label>
   <input type="radio" id="first-rate2" name="review[rating]" value="2" />
   <label for="first-rate2" title="Not good">2 stars</label>
   <input type="radio" id="first-rate3" name="review[rating]" value="3" />
   <label for="first-rate3" title="Average">3 stars</label>
   <input type="radio" id="first-rate4" name="review[rating]" value="4" />
   <label for="first-rate4" title="Very good">4 stars</label>
   <input type="radio" id="first-rate5" name="review[rating]" value="5" />
   <label for="first-rate5" title="Amazing">5 stars</label>
 </fieldset>
</div>
          <div  class="mb-3 mt-3">
              <lable for="comment"class="form-label">Comment</lable>
             <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
          </div>
          <button class="btn btn-outline-dark" >Submit</button>
      </form>
      <%}%>
      <hr>
    
    
  
    <p><b>All Review</b></p>
    <div class="row">
    <% for(review of listing.reviews){ %>
      
      <div class="card col-5 ms-3 mb-3">  
      <div class="card-body">
        <h5 class="card-title">user</h5>
        <p class="card-text"> <%= review.comment %></p>
      
       
        <p class="starability-result card-text small-rating" data-rating="<%= review.rating %>">...</p>


      </div>
      <form  action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
        <button class="btn btn-outline-dark  mb-2 mt-3"type="submit">Delete</button>
    </form>
    
      
     </div>
      <%}%>
    </div>

  </div>
   </div>
   
            



    

